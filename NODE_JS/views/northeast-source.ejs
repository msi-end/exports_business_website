  <script>
    const tags = document.querySelectorAll('.tag');

    const itemImgs = {
      'Chilli': [
        '../image/sourcenortheast/p-ginger.png',
        '../image/fruits/berry.png',
        '../image/fruits/berry.png'
      ],
      'Lemon': [
        '../image/vegetables/corn_image_.png',
        '../image/vegetables/lemon_image_.png',
        '../image/fruits/berrye_.png'
      ],
      'Ginger': [
        '../image/fruits/ava.png',
        '../image/fruits/berry.png',
        '../image/fruits/berry.png'
      ],
      'Pineapple': [
        '../image/fruits/berry.png',
        '../image/fruits/ava.png',
        '../image/vegetables/corn_image_.png'
      ],
      'Turmeric': [
        '../image/vegetables/lemon_image_.png',
        '../image/fruits/berrye_.png',
        '../image/fruits/ava.png'
      ],
      'Corn': [
        '../image/fruits/berrye_.png',
        '../image/vegetables/corn_image_.png',
        '../image/fruits/berry.png'
      ]
    };

    // ✅ Preload all images
    Object.values(itemImgs).flat().forEach(src => {
      const img = new Image();
      img.src = src;
    });

    function getLabel(path) {
      const file = path.split('/').pop(); // e.g., ginger_image_.png
      const name = file.split('.')[0]; // "ginger"
      return name.charAt(0).toUpperCase() + name.slice(1); // "Ginger"
    }

    const leftItem = document.getElementById('left-item');
    const centerItem = document.getElementById('center-item');
    const rightItem = document.getElementById('right-item');

    function updateCarousel(values) {
      [leftItem, centerItem, rightItem].forEach(item => {
        item.classList.add('fade-out');
      });

      setTimeout(() => {
        leftItem.querySelector('img').src = values[0];
        centerItem.querySelector('img').src = values[1];
        rightItem.querySelector('img').src = values[2];

        leftItem.querySelector('.label').textContent = getLabel(values[0]);
        centerItem.querySelector('.label').textContent = getLabel(values[1]);
        rightItem.querySelector('.label').textContent = getLabel(values[2]);

        [leftItem, centerItem, rightItem].forEach(item => {
          item.classList.remove('fade-out');
          item.classList.add('fade-in');
        });

        setTimeout(() => {
          [leftItem, centerItem, rightItem].forEach(item => {
            item.classList.remove('fade-in');
          });
        }, 500);
      }, 200);
    }

    // Tag click
    tags.forEach(tag => {
      tag.addEventListener('click', () => {
        document.querySelector('.tag.active')?.classList.remove('active');
        tag.classList.add('active');
        const text = tag.textContent.trim();
        const values = itemImgs[text];
        updateCarousel(values);
      });
    });

    // Prev/Next logic
    const tagOrder = Object.keys(itemImgs);
    let currentIndex = 0;

    function goToIndex(index) {
      currentIndex = (index + tagOrder.length) % tagOrder.length;
      const tagName = tagOrder[currentIndex];
      document.querySelector('.tag.active')?.classList.remove('active');
      tags[currentIndex].classList.add('active');
      updateCarousel(itemImgs[tagName]);
    }

    document.getElementById('prev-btn').addEventListener('click', () => {
      goToIndex(currentIndex - 1);
    });

    document.getElementById('next-btn').addEventListener('click', () => {
      goToIndex(currentIndex + 1);
    });

    // Set initial index
    goToIndex(0);
  </script>

